<div class="portfolio">
	<h1>Portfolio</h1>

	<table>

		<% @projects.each do |project| %>
		<tr>
			<th><%= link_to  project.name, project %></th>
			<th>What I did</th>
			<th>Tools &amp; technologies</th>

		</tr>
		<tr>
			<td><%= project.description %></td>
			<td><%= project.work %></td>
			<td><%= project.tools %></td>
			<td><%= image_tag project.image %></td>
		</tr>
		<% end %>
	</table>


	<%= link_to 'New Project', new_project_path %>

</div>