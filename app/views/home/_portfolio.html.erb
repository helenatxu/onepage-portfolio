<div id="portfolio">
	<h1>Portfolio</h1>

	<ul>
		<% @projects.each do |project| %>

		<li class="projects_list">

			<div class="thumbnail"><%= link_to(image_tag(project.image, :alt => project.name, :class => 'projects_images'), project.url) %></div>

			<div class="tv">
				<h2><%= link_to  project.name, project.url %></h2>
				<p><span class="text"><%= project.description %></span>
				</p>
				<p>What I did: <span class="text"><%= project.work %></span>
				</p>
				<p>Tools &amp; technologies: <span class="text"><%= project.tools %>
				</p>
			</div>

		</li>
		<% end %>
	</ul>
</div>
<p class="shadow_up"></p>


