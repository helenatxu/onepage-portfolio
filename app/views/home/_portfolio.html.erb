<div id="portfolio">
	<h1><%=t :portfolio_section %></h1>

	<ul>
		<% count = 0 %>
		<% @projects.each do |project| %>
		<% count = count + 1 %>
		
		<li class="projects_list">

			<div class="thumbnail">
				<%= link_to(image_tag(project.image), project.image_big1, :alt => "click me!", :class => 'project_gallery', :rel => "project_#{count}" ) %>
				<%= link_to("", project.image_big2, :class => 'project_gallery', :rel => "project_#{count}") %>
				<%= link_to("", project.image_big3, :class => 'project_gallery', :rel => "project_#{count}") %>
			</div>

			<div class="tv">
				<% if params[:locale] == 'es'%>

				<h2><%= link_to  project.nombre, project.url %></h2>
				<p><%= project.descripcion %></p>
				<p><span class="h3"><%=t :what %></span><%= project.trabajo %>
				</p>
				<p><span class="h3"><%=t :tools %></span><%= project.herramientas %>
				</p>

				<% else %>

				<h2><%= link_to  project.name, project.url %></h2>
				<p><%= project.description %></p>
				<p><span class="h3"><%=t :what %></span><%= project.work %>
				</p>
				<p><span class="h3"><%=t :tools %></span><%= project.tools %>
				</p>

				<% end %>

			</div>

		</li>
		<% end %>
	</ul>

