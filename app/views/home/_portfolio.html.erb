<div id="portfolio">
	<h1><%=t :portfolio_section %></h1>
	<ul>
		<% count = 0 %>
		<% @projects.each do |project| %>
		<% count = count + 1 %>

		<li class="projects_list">

			<% if params[:locale] == 'es'%>
			<div class="thumbnail">
				<%= link_to(image_tag(project.image), project.image_big1, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big1_es ) %>
				<%= link_to("", project.image_big2, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big2_es) %>
				<%= link_to("", project.image_big3, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big3_es) %>
			</div>

			<div class="tv">
				<h2><%= link_to  project.nombre, project.url %></h2>
				<p><%= project.descripcion %></p>
				<p><span class="h3"><%=t :what %></span><%= project.trabajo %>
				</p>
				<p><span class="h3"><%=t :tools %></span><%= project.herramientas %>
				</p>
			</div>

			<% else %>

			<div class="thumbnail">
				<%= link_to(image_tag(project.image), project.image_big1, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big1 ) %>
				<%= link_to("", project.image_big2, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big2) %>
				<%= link_to("", project.image_big3, :class => 'project_gallery', :rel => "project_#{count}", :title =>project.desc_image_big3) %>
			</div>

			<div class="tv">
				<h2><%= link_to  project.name, project.url %></h2>
				<p><%= project.description %></p>
				<p><span class="h3"><%=t :what %></span><%= project.work %>
				</p>
				<p><span class="h3"><%=t :tools %></span><%= project.tools %>
				</p>
			</div>

			<% end %>

		</li>
		<% end %>
	</ul>
</div>
<p class="shadow_up"></p>
