<div class="portfolio">
	<h1>Portfolio</h1>

	<% @projects.each do |project| %>
	<div class="container">

		<ul id="projects_list">
			<li>
				<div class="image"><%= image_tag project.image %>
				</div>
				<div class="tv">
					<h2><%= link_to  project.name, project.url %></h2>
					<p><%= project.description %></p>

					<h3>What I did</h3>
					<p><%= project.work %></p>

					<h3>Tools &amp; technologies</h3>
					<p><%= project.tools %></p>

				</div>
			</li>
		</ul>

	</div>
	<% end %>
	
</div>
<p class="shadow_up"></p>