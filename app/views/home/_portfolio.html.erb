<div id="portfolio">
	<h1><%=t :portfolio_section %></h1>
	<ul>
		<% count = 0 %>
		<% @projects.each do |project| %>
		<% count = count + 1 %>

		<li class="projects_list">
			<% if params[:locale] == 'es'%>

			<div class="tv">
				<h2><%= link_to  project.nombre, project.url %></h2>
				<p><%= project.descripcion %></p>
				<div class="bubble">
					<p><span class="h3"><%=t :what %></span><%= project.trabajo %>
					</p>
					<p><span class="h3"><%=t :tools %></span><%= project.herramientas %>
					</p>
				</div>
				<p class="button">
					<%= link_to  'Ver demo', project.url %>			
				</p>
			</div>

			<div class="thumbnail">
				<ul class="myRoundabout">
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big1), project.image_big1, :class => 'project_gallery', :title =>project.desc_image_big1_es ) %>
					</li>
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big2), project.image_big2, :class => 'project_gallery', :title =>project.desc_image_big2_es) %>
					</li>
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big3), project.image_big3, :class => 'project_gallery', :title =>project.desc_image_big3_es) %>
					</li>
				</ul>
			</div>
			<% else %>
			<div class="tv">
				<h2><%= link_to  project.name, project.url %></h2>
				<p><%= project.description %></p>
				<div class="bubble">
					<p><span class="h3"><%=t :what %></span><%= project.work %>
					</p>
					<p><span class="h3"><%=t :tools %></span><%= project.tools %>
					</p>
				</div>
				<p class="button">
					<%= link_to  'View demo', project.url %>			
				</p>
			</div>

			<div class="thumbnail">
				<ul class="myRoundabout">
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big1), project.image_big1, :class => 'project_gallery', :title =>project.desc_image_big1 ) %>
					</li>
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big2), project.image_big2, :class => 'project_gallery', :title =>project.desc_image_big2) %>
					</li>
					<li class="portfolio-item">
						<%= link_to(image_tag(project.image_big3), project.image_big3, :class => 'project_gallery', :title =>project.desc_image_big3) %>
					</li>
				</ul>
			</div>
			<% end %>
		</li>
		<% end %>
	</ul>
</div>
<p class="shadow_up"></p>
