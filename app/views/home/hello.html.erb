<div id="home">
	<div id="navigation">
		<ul id="nav_bar"> 
			<li id="hello_link"><%= link_to  t(:hello), "#home", :class => 'anchorLink', :title => t(:hello_title) %></li>
			<li id="portfolio_link"><%= link_to  t(:portfolio), "#portfolio", :class => 'anchorLink', :title => t(:portfolio_title)%></li>
			<li id="aboutme_link"><%= link_to  t(:aboutme), "#aboutme", :class => 'anchorLink', :title => t(:aboutme_title)%></li>
			<li id="contact_link"><%= link_to  t(:contact), "#contact", :class => 'anchorLink', :title => t(:contact_title)%></li>
			<li id="lang_menu">
				<ul>
					<li>
						<%=link_to("Español", "#{"http://www.helenamoreno.es"}")%>
					</li>
					<li>
						<%=link_to("English", "#{"http://www.helenamoreno.com"}")%>
					</li>
				</ul>
			</li>
		</ul>
	</div>

	<% if  I18n.locale == 'es'%>
	<div id="logo"><a href="http://www.helenamoreno.es" class="anchorLink" title="Helena Moreno Chacon. Diseñador &amp; desarrollador web freelance">
		<%= image_tag "/assets/elements/logo_es.png", :alt => "Helena Moreno Chacon. Diseñador &amp; desarrollador web freelance" %>
	</a></div>
		<% else %>
		<div id="logo"><a href="http://www.helenamoreno.com" class="anchorLink" title="Helena Moreno Chacon. Freelance web designer &amp; developer">
			<%= image_tag "/assets/elements/logo_eng.png", :alt => "Helena Moreno Chacon. Freelance web designer &amp; developer" %>
		</a></div>
	<% end %>
	
	<header id="hello">
		<hgroup id="hgroup">
			<h1><%=t :hello_big %></h1>
			<h2><%=t :hello_small1 %><br /><%=t :hello_small2 %></h2>

			<h3><a id="arrow" href="#portfolio" class="anchorLink">
				<%= image_tag "/assets/elements/arrow_down.png", :alt => t(:skip) %>
			</a></h3>

			<h3><%=t :checkout %></h3>
		</hgroup>
	</header>
</div>
<p class="shadow"></p>

<%= mylocale = I18n.locale %>

<%= render 'home/portfolio' %>

<% if  mylocale == "es"%>
	<%=  render 'home/aboutme_es'%>
	<% else %>
		<%=  render 'home/aboutme_en'%>
<% end %>

<%= render 'home/contact' %>
